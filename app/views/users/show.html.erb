<div id="page-content">
  <h1 class="text-center mt-4 mb-0"><%= @user.display_name%>'s Profile</h1>
  <div class="container pt-1 pl-4 pr-4" >
  <%= avatar_for @user %>
  </div>
  <div class="text-center mt-4">
    <% if logged_in? && (@user == current_user || current_user.admin?) %>
      <%= link_to "[ Edit your profile ]", edit_user_path(@user) %>
    <% end %>
  </div>
  <h3 class="text-center mt-2 mb-0">Articles</h3>
  <%= render 'articles/articles' %>
</div>