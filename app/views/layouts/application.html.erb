<!DOCTYPE html>
<html>
  <head>
    <title>Mark's Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'layouts/messages' %>
    <%= yield %>
    <% flash.each do |m| %>
      <% if m[0] == "bottom" %>
        <%= m[1] %>
      <% end %>
    <% end %>
  </body>
</html>
