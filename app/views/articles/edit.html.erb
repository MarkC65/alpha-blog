<h1>Edit article</h1>

<%= form_with(model: @article, local: true) do | f | %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, size: "67" %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, size: "65x10" %>
  </p>
  <p>
    <%= f.submit "Save Article" %>
  </p>
<% end %>